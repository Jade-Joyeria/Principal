<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h1 class="text-center my-24 text-xl">Administraci√≥n de productos...</h1>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card bg-dark">
      <div class="card-body">
        <form action="/update/{{data.idproductos}}" method="POST">
          <input
            type="text"
            name="nombre"
            value={{data.nombre}}
            class="form-control mb-2"
            autofocus
          />
          <input
            type="text"
            name="descripcion"
            value={{data.descripcion}}
            class="form-control mb-2"
          />
          <input
            type="text"
            name="cantidad"
            value={{data.cantidad}}
            class="form-control mb-2"
          />
          <input
            type="text"
            name="valor"
            value={{data.valor}}
            class="form-control mb-2"
          />

          <button type="submit" class="btn btn-primary">Editar producto</button>
        </form>
      </div>
    </div>
